<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_margin="15dp"
    android:elevation="10dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                android:id="@+id/itemKdRekening"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:lineHeight="20dp"
                android:text="Test Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                android:id="@+id/itemBulanTahun"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:lineHeight="20dp"
                android:text="Test Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/itemKdRekening"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                android:id="@+id/itemStatusKetetapan"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:lineHeight="20dp"
                android:text="Test Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/itemStatusKetetapan"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                android:id="@+id/itemStatusBayar"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:lineHeight="20dp"
                android:text="Test Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/itemStatusBayar"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                android:id="@+id/itemStatusLunas"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:lineHeight="20dp"
                android:text="Test Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/itemStatusLunas"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                android:id="@+id/itemTotalBayar"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:lineHeight="20dp"
                android:text="Test Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/llButton"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/itemTotalBayar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.button.MaterialButton
                android:textColor="@color/black"
                android:text="Cash"
                app:cornerRadius="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="#00FFFF"
                android:id="@+id/btnBayarCash"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.google.android.material.button.MaterialButton
                app:cornerRadius="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="#FF0000"
                android:text="QRIS"
                android:id="@+id/btnBayarQris"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>