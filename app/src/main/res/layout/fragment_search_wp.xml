<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/llSearch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_weight="0.9"
            android:hint="NPWRD"
            android:id="@+id/edtNpwrd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ivScan"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:src="@drawable/ic_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:id="@+id/btnSearch"
        android:text="Cari"
        app:layout_constraintTop_toBottomOf="@id/llSearch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:visibility="gone"
        android:id="@+id/svDetailNpwrd"
        app:layout_constraintTop_toBottomOf="@id/btnSearch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:elevation="40dp"
                app:cardElevation="40dp"
                app:cardCornerRadius="12dp"
                android:fitsSystemWindows="false"
                app:cardPreventCornerOverlap="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="100dp"
                android:id="@+id/cvDetail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="10dp"
                        android:id="@+id/llDetail"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Nomor NPWRD:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:id="@+id/txtNpwrd"
                            android:text="NPWRD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Nama Wajib Pajak:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:id="@+id/txtNama"
                            android:text="NAMA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Alamat Wajib Pajak:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:id="@+id/txtAlamat"
                            android:text="ALAMAT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Kota:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:id="@+id/txtKota"
                            android:text="KOTA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Nominal Pengenaan:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:id="@+id/txtNominal"
                            android:text="Nominal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:fitsSystemWindows="true"
                        android:gravity="bottom"
                        android:layout_below="@id/llDetail"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.button.MaterialButton
                            app:cornerRadius="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:id="@+id/btnQris"
                            android:theme="@style/ThemeOverlay.Material3.Button.TextButton"
                            android:layout_weight="0.5"
                            android:text="QRIS"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <com.google.android.material.button.MaterialButton
                            app:cornerRadius="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:backgroundTint="@android:color/holo_red_light"
                            android:layout_weight="0.5"
                            android:id="@+id/btnTutup"
                            android:text="KIOS TUTUP"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
