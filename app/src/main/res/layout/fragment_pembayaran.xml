<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txtToko"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:hint="TOKO / KIOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtLos"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:hint="Los"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtTempat"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:hint="Pelataran / PKL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtJenis"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:hint="Pasar Hewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtBongkarMuat"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:hint="Bongkar Muat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtKegiatan"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:hint="Insidental / Musiman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtLahan"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:hint="Pemakaian Lahan Pasar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>