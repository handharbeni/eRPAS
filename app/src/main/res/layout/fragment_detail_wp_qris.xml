<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/logoQris"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_qris"
        android:layout_width="150dp"
        android:layout_height="80dp"/>
    <TextView
        android:text="Tunjukkan QRIS ini untuk melakukan Pembayaran"
        android:id="@+id/labelQris"
        app:layout_constraintTop_toBottomOf="@id/logoQris"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivQris"
        app:layout_constraintTop_toBottomOf="@id/labelQris"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_qris"
        android:layout_width="400dp"
        android:layout_height="400dp"/>
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/txtIdPayment"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/ivQris"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="IDXXXXXXXX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnOther"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/txtIdPayment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Pilih Pembayaran Lain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>